<% provide(:title, "Blogs") %>
<div id="outer-box" >
  <section id="blogs"">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <img class="story-main-img" src="/images/blogs/sample11.jpeg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title title-font"><%=@blog.title %></h5>
              <p class="card-text content-para-font"><%=@blog.description %></p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </section>
</div>